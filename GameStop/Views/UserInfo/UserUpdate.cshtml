@model GameStop.Models.ViewModels.UserUpdateView
@{
    ViewBag.Title = "title";
    Layout = "_Layout";
}

<h2>Изменение пользователя</h2>
<form method="post" asp-controller="UserInfo" asp-action="UserUpdate">
    <div asp-validation-summary="ModelOnly"></div>
    
    <div>
        <label asp-for="Login"></label><br />
        <input value="@Model.Login" asp-for="Login" />
        <span asp-validation-for="Login"></span>
    </div>
    <div>
        <label asp-for="Email"></label><br />
        <input value="@Model.Email" asp-for="Email" />
        <span asp-validation-for="Email"></span>
    </div>
    <div>
        <label asp-for="OldPassword"></label><br />
        <input asp-for="OldPassword" />
        <span asp-validation-for="OldPassword"></span>
    </div>
    <div>
        <label asp-for="Password"></label><br />
        <input asp-for="Password" />
        <span asp-validation-for="Password"></span>
    </div>
    
    <div>
        <label asp-for="Name"></label><br />
        <input value="@Model.Name" asp-for="Name" />
        <span asp-validation-for="Name"></span>
    </div>
    
    <div>
        <label asp-for="Surname"></label><br />
        <input value="@Model.Surname" asp-for="Surname" />
        <span asp-validation-for="Surname"></span>
    </div>
    
    <div>
        <label asp-for="Age"></label><br />
        <input value="@Model.Age" asp-for="Age" />
        <span asp-validation-for="Age"></span>
    </div>
    
    <div>
        <input type="submit" value="Изменить пользователя" />
    </div>
</form>

